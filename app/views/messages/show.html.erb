<div class=" relative">
<% if notice %>
    <div class="flex p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" data-testid="notification" role="alert">
      <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd">
      </path>
      </svg>
      <%# <span class="sr-only"></span> %>
      <div>
        <span class="font-medium"><%= notice %></span>
      </div>
    </div>
<% end %>
  <div class="absolute top-2 right-0 h-16 w-16 z-50">
    <%= link_to(
                  "X",
                  root_path,
                  class: %w[
                    bg-white
                    hover:bg-blue-500
                    text-grey-700
                    font-semibold
                    hover:text-white
                    py-2
                    px-4
                    border
                    border-grey-500
                    hover:border-transparent
                    rounded
                  ],
                      data: { testid: "back" },
                ) %>
        </div>
        </div>
    <div class="w-full p-2 bg-gradient-to-r from-green-500 via-emerald-500 to-green-800">
      <div class="w-full  lg:w-2/3 bg-gray-50 rounded-xl m-auto">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <p class="p-2 text-l font-bold text-center text-green-500" id="title-new-message">
            <%= link_to(
                      "Edit your message",
                      edit_message_path(@message),
                      class: %w[
                        bg-transparent
                        hover:bg-pink-500
                        text-pink-700
                        font-semibold
                        hover:text-white
                        py-2
                        px-4
                        border
                        border-pink-500
                        hover:border-transparent
                        rounded
                      ],
                      data: { testid: "edit" },
                    ) %>
          </p>
          <p class="p-3 pt-4 text-lg font-bold text-gray-500 lg:text-gray-300 text-center">
          </p>
          <div class="content-center">
            <div class="relative w-full mx-auto mt-3">
              <div class="relative mt-2">
                <%= render @message %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
