
<% unless @pause %>
  <% content_for :head do %>
    <meta http-equiv="refresh" content="<%= @time %>;url=<%= @next_refresh_path %>" />
  <% end %>
<% end %>
<%= render @message %>

<div class="relative z-50 flex flex-col items-center justify-between p-3">
  <%= link_to(
    "Next >",
    slideshow_messages_path(id: @next_message_id),
    class: %w[
      bg-transparent
      hover:bg-blue-500
      text-blue-700
      font-semibold
      hover:text-white
      py-2
      px-4
      border
      border-blue-500
      hover:border-transparent
      rounded
    ]
  ) %>
</div>
<div class="relative z-50 flex flex-col items-center justify-between p-3">
  <%= link_to(
    "Back",
    root_path,
    class: %w[
      bg-transparent
      hover:bg-blue-500
      text-blue-700
      font-semibold
      hover:text-white
      py-2
      px-4
      border
      border-blue-500
      hover:border-transparent
      rounded
    ]
  ) %>
</div>