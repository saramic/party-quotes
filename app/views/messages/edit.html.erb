    <%= link_to(
                  "X",
                  root_path,
                  class: %w[
                    bg-white
                    hover:bg-blue-500
                    text-grey-700
                    font-semibold
                    hover:text-white
                    py-2
                    px-4
                    border
                    border-grey-500
                    hover:border-transparent
